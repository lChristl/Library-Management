package mongoJava;

import java.awt.Color;
import java.awt.Dimension;
import java.awt.EventQueue;
import java.awt.Frame;
import java.awt.Dialog.ModalExclusionType;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JLabel;
import javax.swing.JOptionPane;

import java.awt.Font;
import javax.swing.JTextField;
import javax.swing.JButton;
import javax.swing.JPasswordField;
import java.awt.event.ActionEvent;
import javax.swing.SwingConstants;
import javax.swing.border.MatteBorder;
import javax.swing.ImageIcon;
import java.awt.Toolkit;
import java.awt.event.ActionListener;

public class LogIn {

    JFrame frame;
    private JTextField textField;
    private JPasswordField passwordField;

    public static void main(String[] args) {
        EventQueue.invokeLater(() -> {
            try {
                LogIn window = new LogIn();
                window.frame.setVisible(true);
            } catch (Exception e) {
                e.printStackTrace();
            }
        });
    }

    public LogIn() {
        initialize();
    }

    private void initialize() {
		frame = new JFrame();
		frame.setIconImage(Toolkit.getDefaultToolkit().getImage(LogIn.class.getResource("/mongoJava/photos/Libris_logo (2) (3).png")));
		frame.getContentPane().setFont(new Font("Century Gothic", Font.PLAIN, 20));
		frame.getContentPane().setBackground(new Color(255, 255, 255));
		frame.setTitle("LibManage");
		frame.setModalExclusionType(ModalExclusionType.APPLICATION_EXCLUDE);
		frame.setExtendedState(Frame.MAXIMIZED_BOTH);
		frame.setResizable(false);
		frame.setPreferredSize(new Dimension(1920, 1080));
		frame.setAutoRequestFocus(false);
		frame.setBounds(0, 0, 1940, 1080);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.getContentPane().setLayout(null);
		
		JPanel panel = new JPanel();
		panel.setBackground(new Color(255, 255, 255));
		panel.setBounds(1053, 289, 766, 686);
		frame.getContentPane().add(panel);
		
		JLabel lblNewLabel_5 = new JLabel("New label");
		lblNewLabel_5.setHorizontalAlignment(SwingConstants.CENTER);
		lblNewLabel_5.setIcon(new ImageIcon(LogIn.class.getResource("/mongoJava/photos/Libris_logo (2).png")));
		panel.add(lblNewLabel_5);
		
		JPanel panel_2 = new JPanel();
		panel_2.setBackground(new Color(128, 0, 0));
		panel_2.setBounds(0, 0, 1934, 227);
		frame.getContentPane().add(panel_2);
		panel_2.setLayout(null);
		
		JLabel lblNewLabel_3 = new JLabel("LIBRIS");
		lblNewLabel_3.setForeground(new Color(255, 255, 255));
		lblNewLabel_3.setBackground(new Color(255, 255, 255));
		lblNewLabel_3.setFont(new Font("Montserrat Black", Font.PLAIN, 99));
		lblNewLabel_3.setBounds(52, 48, 589, 136);
		panel_2.add(lblNewLabel_3);
		
		JLabel lblNewLabel_4 = new JLabel("Log In");
		lblNewLabel_4.setForeground(new Color(255, 255, 255));
		lblNewLabel_4.setFont(new Font("Montserrat Black", Font.PLAIN, 65));
		lblNewLabel_4.setBounds(1544, 48, 298, 136);
		panel_2.add(lblNewLabel_4);
		
		JLabel lblNewLabel_1 = new JLabel("Email :");
		lblNewLabel_1.setForeground(new Color(28, 28, 28));
		lblNewLabel_1.setFont(new Font("Montserrat Black", Font.PLAIN, 25));
		lblNewLabel_1.setBounds(245, 463, 110, 25);
		frame.getContentPane().add(lblNewLabel_1);
		
		textField = new JTextField();
		textField.setFont(new Font("Montserrat SemiBold", Font.PLAIN, 18));
		textField.setBounds(277, 515, 549, 45);
		frame.getContentPane().add(textField);
		textField.setColumns(10);
		
		JLabel lblNewLabel_2 = new JLabel("Password :");
		lblNewLabel_2.setForeground(new Color(28, 28, 28));
		lblNewLabel_2.setFont(new Font("Montserrat Black", Font.PLAIN, 25));
		lblNewLabel_2.setBounds(245, 617, 191, 25);
		frame.getContentPane().add(lblNewLabel_2);
		
		JButton btnNewButton = new JButton("Log In");
		btnNewButton.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				String email = textField.getText();
		        @SuppressWarnings("deprecation")
				String pass  = passwordField.getText();
		        
		        if (email.isEmpty() || pass.isEmpty()) {
		            JOptionPane.showMessageDialog(null, "Please enter email and password.");
		            return;
		        }
		        boolean loggedIn = AccountDB.loginUser(email, pass);

		        if (loggedIn) {
		            JOptionPane.showMessageDialog(null, "Login successful!");
		            Dashboard.main(new String[]{});
		            frame.dispose();
		        } else {
		            JOptionPane.showMessageDialog(null, "Invalid email or password!");
		        }
			}
		});
		btnNewButton.setForeground(new Color(28, 28, 28));
		btnNewButton.setBorder(new MatteBorder(3, 3, 3, 3, (Color) new Color(103, 0, 0)));
		btnNewButton.setBackground(new Color(255, 255, 255));
		btnNewButton.setFont(new Font("Montserrat Black", Font.PLAIN, 25));
		btnNewButton.setBounds(673, 790, 153, 45);
		frame.getContentPane().add(btnNewButton);
		
		passwordField = new JPasswordField();
		passwordField.setFont(new Font("Montserrat SemiBold", Font.PLAIN, 18));
		passwordField.setBounds(277, 687, 549, 45);
		frame.getContentPane().add(passwordField);
		
		JLabel lblNewLabel = new JLabel("LOG IN");
		lblNewLabel.setHorizontalAlignment(SwingConstants.CENTER);
		lblNewLabel.setBounds(423, 335, 258, 62);
		frame.getContentPane().add(lblNewLabel);
		lblNewLabel.setForeground(new Color(28, 28, 28));
		lblNewLabel.setFont(new Font("Montserrat Black", Font.PLAIN, 50));
		
		JButton btnBack = new JButton("Back");
		btnBack.setForeground(new Color(28, 28, 28));
		btnBack.setFont(new Font("Montserrat Black", Font.PLAIN, 25));
		btnBack.setBorder(new MatteBorder(3, 3, 3, 3, (Color) new Color(103, 0, 0)));
		btnBack.setBackground(Color.WHITE);
		btnBack.setBounds(277, 790, 153, 45);
		btnBack.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				Open.main(new String[]{});
				frame.dispose();
			}
		});
		frame.getContentPane().add(btnBack);
    }
}
