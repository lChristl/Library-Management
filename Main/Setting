		JButton btnLogOut = new JButton("Log Out");
		btnLogOut.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				int option = JOptionPane.showConfirmDialog(
			            null,
			            "Are you sure you want to logout?",
			            "Logout",
			            JOptionPane.YES_NO_OPTION
			    );

			    if (option == JOptionPane.YES_OPTION) {
			        LogIn.main(new String[]{});
			        frmLibmanage.dispose();
			    }
			}
		});
		btnLogOut.setForeground(new Color(28, 28, 28));
		btnLogOut.setFont(new Font("Montserrat SemiBold", Font.PLAIN, 24));
		btnLogOut.setBorder(new MatteBorder(3, 3, 3, 3, (Color) new Color(103, 0, 0)));
		btnLogOut.setBackground(Color.WHITE);
		btnLogOut.setBounds(384, 849, 202, 65);
